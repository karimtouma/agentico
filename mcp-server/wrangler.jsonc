{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "agentico-mcp",
  "main": "src/index.ts",
  "compatibility_date": "2025-03-10",
  "compatibility_flags": ["nodejs_compat"],

  // Observability
  "observability": {
    "enabled": true
  },

  // Durable Objects for MCP agent state
  "durable_objects": {
    "bindings": [
      {
        "name": "MCP_OBJECT",
        "class_name": "BookMCP"
      }
    ]
  },

  // KV namespace for book content
  "kv_namespaces": [
    {
      "binding": "BOOK_KV",
      "id": "4405cb4f8f274dbcb850a395f8f1a9fe"
    }
  ],

  // Migrations for Durable Objects
  "migrations": [
    {
      "tag": "v1",
      "new_sqlite_classes": ["BookMCP"]
    }
  ]
}
