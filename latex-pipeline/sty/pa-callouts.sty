  borderline west={3pt}{0pt}{pa-callout-accent-border},
  title={\faClipboardList\quad Resumen Ejecutivo},
  coltitle=pa-callout-accent-border,
  colbacktitle=pa-callout-accent-bg,
  attach boxed title to top left={yshift=-2mm,xshift=4mm},
  boxed title style={
